<h1>New Question</h1>

<%= form_with scope: :quiz, url: questions_path, local: true do |form| %>
  <p>
    <%= form.label :title %><br>
    <%= form.text_field :title %>
  </p>

  <p>
    <%= form.label :correct_answer %><br>
    <%= select(:answer) %>
  </p>

  <p>
    <%= form.label :answer_2 %><br>
    <%= select(:answer) %>
  </p>

  <p>
    <%= form.label :answer_3 %><br>
    <%= select(:answer) %>
  </p>

  <p>
    <%= form.label :answer_4 %><br>
    <%= select(:answer) %>
  </p>

  <!-- <p>
    <%= form.label :description %><br>
    <%= form.text_area :description %>
  </p> -->

  <p>
    <%= form.label :url %><br>
    <%= form.text_field :url %>
  <p>
    <%= form.submit %>
  </p>
<% end %>

<%= link_to 'Back', questions_path %>
