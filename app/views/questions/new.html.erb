<h1>New Question</h1>

<%= form_with scope: :question, url: quiz_questions_path, local: true do |form| %>
  <p>
    <%= form.label :title %><br>
    <%= form.text_field :title %>
  </p>

  <p>
    <%= form.label :correct_answer %><br>
    <%= form.text_field :correct_answer %>
  </p>

  <p>
    <%= form.label :answer_2 %><br>
    <%= form.text_field :answer2 %>
  </p>

  <p>
    <%= form.label :answer_3 %><br>
    <%= form.text_field :answer3 %>
  </p>

  <p>
    <%= form.label :answer_4 %><br>
    <%= form.text_field :answer4 %>
  </p>

  <p>
    <%= form.submit %>
  </p>
<% end %>

<%= link_to 'Back', quiz_questions_path %>
