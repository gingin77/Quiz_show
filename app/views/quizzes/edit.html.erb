<h1>Edit Quiz</h1>

<%= form_with model: @quiz, local: true do |form| %>

  <p>
    <%= form.label :title %><br>
    <%= form.text_field :title %>
  </p>
  <p>
    <%= form.label :description %><br>
    <%= form.text_field :description %>
  </p>

  <p>
    <%= form.submit "Update" %>
  </p>

<% end %>

<%= link_to 'Back', quizzes_path %>
